{
  "version": 2,
  "builds": [
    {
      "src": "solana-bridge.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/health",
      "methods": ["GET"],
      "dest": "/solana-bridge.js"
    },
    {
      "src": "/send-tx",
      "methods": ["POST", "OPTIONS"],
      "dest": "/solana-bridge.js"
    },
    {
      "src": "/mint-nft",
      "methods": ["POST", "OPTIONS"],
      "dest": "/solana-bridge.js"
    },
    {
      "src": "/.*",
      "dest": "/solana-bridge.js"
    }
  ]
}
