{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "methods": ["GET"],
      "dest": "/api/health.js"
    },
    {
      "src": "/mint-nft",
      "methods": ["POST"],
      "dest": "/api/mint-nft.js"
    }
  ],
  "env": {
    "SOLANA_RPC_URL": "@solana_rpc_url",
    "CREATOR_PRIVATE_KEY": "@creator_private_key",
    "PINATA_API_KEY": "@pinata_api_key",
    "PINATA_SECRET_KEY": "@pinata_secret_key",
    "COLLECTION_MINT_ADDRESS": "@collection_mint_address"
  }
}
